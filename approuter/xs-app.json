{
  "welcomeFile": "/index.html",
  "authenticationMethod": "route",
  "logout": {
    "logoutEndpoint": "/do/logout",
    "logoutPage": "/logged-out.html"
  },
  "routes": [
    {
      "source": "/api/(.*)$",
      "target": "/api/$1",
      "authenticationType": "xsuaa",
      "destination": "srv_api",
      "csrfProtection": true
    },
    {
      "source": "/sap/(.*)$",
      "target": "/sap/$1",
      "destination": "SAP_ABAP_BACKEND"
    },
    {
      "source": "/b1s/(.*)$",
      "target": "/b1s/$1",
      "destination": "SAP_B1_BACKEND"
    },
    {
      "source": "^/logged-out.html$", 
      "localDir": "webapp", 
      "authenticationType": "none"
    },
    {
      "source": "^/(.*)$",
      "target": "$1",
      "localDir": "webapp"
    }
  ]
}
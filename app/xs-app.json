{
  "welcomeFile": "/app/index.html",
  "authenticationMethod": "route",
  "logout": {
    "logoutEndpoint": "/do/logout"
  },
  "routes": [
    {
      "source": "/api/(.*)$",
      "target": "/api/$1",
      "authenticationType": "xsuaa",
      "destination": "srv_api",
      "csrfProtection": true
    },
    {
      "source": "/sap/(.*)$",
      "target": "/sap/$1",
      "destination": "SAP_ABAP_BACKEND"
    },
    {
      "source": "^/app/logout.html$", 
      "localDir": "webapp", 
      "authenticationType": "none"
    },
    {
      "source": "^/app/(.*)$",
      "target": "$1",
      "localDir": "webapp"
    }
  ]
}
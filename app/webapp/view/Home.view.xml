<mvc:View controllerName="com.sap.sapmentors.HTML5UserAPIforCF-ui.controller.Home" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout" displayBlock="true" 
	xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<l:BlockLayout id="BlockLayout">
							<l:BlockLayoutRow accentCells="UserAPI">
								<l:BlockLayoutCell id="UserAPI" width="2" title="User API">
									<l:content>
										<Link text="/services/userapi/currentUser" href="/services/userapi/currentUser" />
									</l:content>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
							<l:BlockLayoutRow accentCells="Logout">
								<l:BlockLayoutCell id="Logout" width="2" title="Logout">
									<l:content>
										<Link text="/do/logout" href="/do/logout" />
									</l:content>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
						</l:BlockLayout>
					</l:VerticalLayout>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
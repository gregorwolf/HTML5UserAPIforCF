<mvc:View controllerName="com.sap.sapmentors.HTML5UserAPIforCF-ui.controller.Home" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout" displayBlock="true" 
	xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<l:VerticalLayout class="sapUiContentPadding" width="100%">
						<l:BlockLayout id="BlockLayout">
							<l:BlockLayoutRow accentCells="UserAPI">
								<l:BlockLayoutCell id="UserAPI" width="2" title="User API">
									<l:content>
										<Link text="/api/userInfo" href="/api/userInfo" />
									</l:content>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
							<l:BlockLayoutRow accentCells="JWT">
								<l:BlockLayoutCell id="jwtdecode" width="2" title="JWT Decoded">
									<l:content>
										<Link text="/api/jwtdecode" href="/api/jwtdecode" />
									</l:content>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
							<l:BlockLayoutRow accentCells="JWT">
								<l:BlockLayoutCell id="JWT" width="2" title="JWT">
									<l:content>
										<Link text="/api/jwt" href="/api/jwt" />
									</l:content>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
							<l:BlockLayoutRow accentCells="Backend">
								<l:BlockLayoutCell id="BackendPublic" width="2" title="Backend without authentication">
									<l:content>
										<Link text="/sap/public/ping" href="/sap/public/ping" />
									</l:content>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
							<l:BlockLayoutRow accentCells="Backend">
								<l:BlockLayoutCell id="BackendPrivate" width="2" title="Backend with authentication">
									<l:content>
										<Link text="/sap/bc/ping" href="/sap/bc/ping" />
									</l:content>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
							<l:BlockLayoutRow accentCells="Backend">
								<l:BlockLayoutCell id="BackendB1V1" width="1" title="Business One Backend V1 (OData V3)">
									<l:content>
										<Link text="/b1s/v1/$metadata" href="/b1s/v1/$metadata" />
									</l:content>
								</l:BlockLayoutCell>
								<l:BlockLayoutCell id="BackendB1V2" width="1" title="Business One Backend V2 (OData V4)">
									<l:content>
										<Link text="/b1s/v1/$metadata" href="/b1s/v2/$metadata" />
									</l:content>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
							<l:BlockLayoutRow accentCells="Logout">
								<l:BlockLayoutCell id="Logout" width="2" title="Logout">
									<l:content>
										<Link text="/do/logout" href="/do/logout" />
									</l:content>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
						</l:BlockLayout>
					</l:VerticalLayout>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>